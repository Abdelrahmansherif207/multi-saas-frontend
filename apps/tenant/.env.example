# ===========================================
# Tenant App Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Laravel Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Multi-tenancy configuration
NEXT_PUBLIC_ROOT_DOMAIN=localhost:3001

# App-specific settings
NEXT_PUBLIC_APP_NAME="Tenant Portal"
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Theme fallback (used if tenant config fetch fails)
NEXT_PUBLIC_DEFAULT_THEME=default
